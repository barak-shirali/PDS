    script(src='/lib/angular/angular.min.js', type='text/javascript')
    script(src='/lib/angular-sanitize/angular-sanitize.min.js', type='text/javascript')
    script(src='/lib/angular-touch/angular-touch.min.js', type='text/javascript')
    script(src='/lib/angular-cookies/angular-cookies.min.js', type='text/javascript')
    script(src='/lib/angular-ui-router/release/angular-ui-router.min.js', type='text/javascript')
