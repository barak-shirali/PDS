    // END CORE ANGULARJS PLUGINS
    // BEGIN APP LEVEL ANGULARJS SCRIPTS
    script(src='js/app.js', type='text/javascript')
    script(src='js/directives/directives.js', type='text/javascript')
    script(src='js/filters.js', type='text/javascript')
    script(src='js/constants.js', type='text/javascript')
    script(src='js/init.js', type='text/javascript')
    script(src='js/libraries/table-advanced.js', type='text/javascript')
    script(src='js/libraries/table-ajax.js', type='text/javascript')
